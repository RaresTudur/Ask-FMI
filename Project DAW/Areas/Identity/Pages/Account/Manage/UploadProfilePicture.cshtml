@page
@model UploadProfilePictureModel
@{
    ViewData["Title"] = "Profile Picture";
    ViewData["ActivePage"] = ManageNavPages.UploadProfilePicture;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Imagine" class="form-control" accept="image/*" />
                <label asp-for="Input.Imagine" class="form-label"></label>
                <span asp-validation-for="Input.Imagine" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Backround" class="form-control" accept="image/*" />
                <label asp-for="Input.Backround" class="form-label"></label>
                <span asp-validation-for="Input.Backround" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Upload</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
