@model Project_DAW.Models.ApplicationUser

<img src=@Model.BackroundImage() alt="fundal" class="banner">

<div class="bar">
    <div class="containerprofile">
        <ul>
            <li >
                <span>Intrebari</span>
                <strong>@Model.Intrebari.Count()</strong>
            </li>

            <li >
                <span>Comentarii</span>
                <strong>@Model.Comentarii.Count()</strong>
            </li>

            <li>
                <span>Aprecieri</span>
                <strong>Soon</strong>
            </li>

        </ul>
        <div class="actions">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>Edit</strong></a>
        </div>
    </div>
</div>

<div class="wrapper-content">
    <div class="containerprofile">
        <aside class="profile">
            <img src="@Model.ProfileImage()" class="avatar" alt="poza de profil">
            <h1>@Model.FirstName @Model.LastName</h1>
            <span>@Model.Email</span>
           
            <ul class="list">
                <li>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z" />
                    </svg>
                    @Model.JoinDate
                </li>
                <li>Roluri:</li>
                    @if (Model.Moderator)
                    {
                    <li>


                        <div class="moderator">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                            </svg>
                            Moderator
                        </div>
                    </li>

                    }
                    @if (Model.Admitere)
                    {
                    <li>

                        <div class="admitere">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                            </svg>
                            Admitere
                        </div>
                    </li>

                    }
                    @if (Model.Licenta)
                    {
                    <li>

                        <div class="licenta">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                            </svg>
                            Licenta
                        </div>
                    </li>

                    }
                    @if (Model.Master)
                    {
                    <li>
                        <div class="master">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                            </svg>Master
                        </div>

                        
                    </li>

                    
                    }
                <li>
                    <div class="user">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
                        </svg>User
                    </div>


                </li>

                </ul>

           
        </aside>

        <section class="timeline">
            <nav>
                @if (ViewBag.pagina == 0)
                {
                    <a href="/Users/Show/@Model.Id" class="active">Intrebari</a>
                    <a href="/Users/Show/@Model.Id?page=1">Comentarii</a>
                    <a href="/Users/Show/@Model.Id?page=2">Aprecieri</a>
                    @if (Model.Intrebari != null)
                    {
                        <ul class="tweets">
                            @foreach (Project_DAW.Models.Intrebare intrebare in Model.Intrebari)
                            {
                                <li>
                                    <img src=@Model.ProfileImage() alt="Avatar">
                                    <div class="info">
                                        <strong> <span>@Model.Email</span></strong>
                                        <p class="fw-bold"> @intrebare.Name</p>
                                        <p>@intrebare.Continut</p>
                                        <div class="actions">
                                            <a class="goto" href="/Intrebari/Show/@intrebare.Id">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-right " viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5" />
                                                </svg>

                                            </a>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }


                }else if(ViewBag.pagina == 1)
                {
                    <a href="/Users/Show/@Model.Id" >Intrebari</a>
                    <a href="/Users/Show/@Model.Id?page=1" class="active">Comentarii</a>
                    <a href="/Users/Show/@Model.Id?page=2">Aprecieri</a>
                    @if (Model.Comentarii != null)
                    {
                        <ul class="tweets">
                            @foreach (Project_DAW.Models.Comentariu comentariu in Model.Comentarii)
                            {
                                <li>

                                    <div class="info">
                                        <strong> @comentariu.Intrebare.Name</strong>
                                        <p>@comentariu.Intrebare.Continut</p>
                                        
                                        <div class="comentariuprofile">
                                            <img class="rounded-circle" style="width:40px;height:40px;" src=@Model.ProfileImage() alt="Avatar">

                                            <strong> <span>@Model.Email</span></strong>
                                            <p>@comentariu.Continut</p>
                                         </div>

                                        <div class="actions">
                                            <a class="goto" href="/Intrebari/Show/@comentariu.IntrebareId">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-right " viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5" />
                                                </svg>

                                            </a>
                                        </div>
                                    </div>

                                 </li>
                                
                            }
                        </ul>
                    }

                }
                else if (ViewBag.pagina == 2)
                {
                    <a href="/Users/Show/@Model.Id">Intrebari</a>
                    <a href="/Users/Show/@Model.Id?page=1" >Comentarii</a>
                    <a href="/Users/Show/@Model.Id?page=2" class="active">Aprecieri</a>

                }
            </nav>

           

                
               
                    
                

           
        </section>
    </div>
</div>

