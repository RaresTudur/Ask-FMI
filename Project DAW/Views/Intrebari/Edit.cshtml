@model Project_DAW.Models.Intrebare

<h2 class="text-center mt-5">Editare intrebare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Intrebari", method: FormMethod.Post,routeValues: new { id = Model.Id }))
            {
                /* @Html.HiddenFor(m => m.Id)  */


                @Html.Label("Title", "Titlu intrebare")
                <br />
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Continut", "Continut intrebare")
                <br />
                @Html.Editor("Continut", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Continut, null, new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati categoria</label>

                @Html.DropDownListFor(m => m.SubCategorieId, new SelectList(Model.SubCateg, "Value", "Text"), "Selectati categoria", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SubCategorieId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Modifica intrebare</button>

            }
        </div>
    </div>
</div>




